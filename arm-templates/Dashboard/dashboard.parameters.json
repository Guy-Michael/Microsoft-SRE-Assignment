{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "value": "simpleLinuxVM"
          },
          "dashboardName": {
            "value": "[guid(parameters('vmName'), parameters('resourceGroupName'))]",
            "metadata": {
              "Description": "Resource name that Azure portal uses for the dashboard"
            }
          },
          "dashboardDisplayName": {
            "value": "Guy's Dashboard",
            "metadata": {
              "description": "Name of the dashboard to display in Azure portal"
            }
          },
          "location": {
            "value": "[resourceGroup().location]"
          }
    }
  }